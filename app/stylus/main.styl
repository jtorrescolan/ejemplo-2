	margin: 2px

.contenedor-blog
	margin-bottom: 80px

.foto-equipo
	min-height: 200px
	background: gray

.imagen-blog
	height: 367px
	background: gray

.descripcion-equipo
	padding: 15px 15px 1px 15px
	background: rgb(249, 249, 249) 

.descripcion-equipo .descripcion p
	font-size: 18px
	line-height: 22px

