
//Variables
anchoMaximo=800px
anchoMaximo_1=1349px


//main.css

body
	font-size: 14px

button
	outline: none

.texto-centrado
	text-align: center

.ancho-maximo
	max-width: anchoMaximo
	margin: 0 auto

.ancho-maximo-1
	max-width: anchoMaximo_1
	margin: 0 auto

.cabecera
	background-image: url('../images/cd-intro-bg.jpg')
	background-size: cover
	background-position: center center
	width: 100%
	position: relative

.titulo-principal
	position: absolute
	z-index: 100
	left: 0px
	top: 42%
	bottom: 0px
	right: 0px

.titulo-principal h1
	color: #fff
	font-size: 70px
	text-align: center

.titulo-principal i
	font-style: italic

#who-we-are
#who-we-are-1
#what-we-do
#last-post
#contact-us
	padding: 70px 0px

.sub-title
	margin-bottom: 10px
	text-transform: uppercase
	color: #D39E2F
	font-weight: bold

.sub-title h4
	font-size: 16px
	
.sub-title h6
	font-size: 14px
	color: #5A5C5E
	
.title
	margin-bottom: 30px
	text-transform: capitalize
	color: #5A5C5E

.title h1
	font-size: 50px
	
.title h3
	font-size: 30px

.descripcion
	margin-bottom: 40px

.descripcion p
	font-size: 22px
	line-height: 31px
	color: #3F3F41

.descripcion-blog .descripcion p
	font-size: 18px
	
.contenedor-boton a
	display: block
	border: 1px solid black
	background: white
	padding: 22px 0px
	text-transform: capitalize
	font-size: 16px
	width: 260px
	color: #3F3F41
	text-decoration: none
	margin: 0 auto
	&:hover
		color: #D39E2F
		border: 1px solid #D39E2F

.boton-blog a
	width: 100px
	padding: 15px
	margin: 0
	text-align: center

.contenedor-imagen
	margin: 2px
	background: gray
	height: 300px
	background-size: cover
	
.ctn-imagen-1
	background-image: url('../images/heydays_nora01-1440x900.jpg')

