.cabecera
	background-size: cover
	background-position: center center
	width: 100%
	position: relative

.cabecera-index
	background-image: url('../images/cd-intro-bg.jpg')

.cabecera-principal
	padding: 20px 30px
	&:after
		display: table
		content: ''
		clear: both

.cabecera-principal-2
	position: fixed
	top: 0
	left: 0
	right: 0
	background-color: rgba(45, 48, 53,0.5)
	z-index: 999

.cabecera-principal-3
	background-color: rgb(45, 48, 53)

.cabecera-logo
	width: 202px
	float: left

.cabecera-logo>a
	display: block

.cabecera-menu
	padding: 15px 0px
	width: 81px
	float: right

.cabecera-menu>div
	display: inline-block
	text-align: center
	font-size: 20px
	color: #fff
	text-transform: uppercase

.cabecera-principal>div:last-child
	cursor: pointer

.contenedor-menu
	position: absolute
	top: 90px
	left: 0
	right: 0
	z-index: 102
	background: rgb(45, 48, 53)
	overflow-y: auto
	opacity: 0

.nav-principal
	padding-bottom: 40px

.nav-principal>li
	margin-bottom: 25px

.nav-principal>li>div
	padding: 10px
	color: white
	font-size: 18px
	text-transform: uppercase
	text-align: center
	
.nav-principal>li>a
	display: block
	text-decoration: none
	font-size: 31px
	color: rgb(212,175,55)
	text-transform: capitalize
	padding: 15px
	text-align: center

.social-buttons
	width: 250px
	margin: 0 auto
	&:after
		display: table
		content: ''
		clear: both

.social-buttons>div
	font-size: 23px
	color: rgb(212,175,55)
	float: left
	width: 25%
	text-align: center

.titulo-principal
	position: absolute
	z-index: 100
	left: 0px
	top: 42%
	bottom: 0px
	right: 0px

.titulo-principal h1
